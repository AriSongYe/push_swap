#include "push_swap.h"

void	bubble_sort(t_num **a, t_num **b)
{
	t_num	*a_stack;
	t_num	*b_stack;

	a_stack = *a;
	b_stack = *b;

	while (!a_stack)
	{
	op_swap(&a_stack, 1);
		if (a_stack->value > a_stack->next->value)
		{
			op_push(&a_stack, &b_stack, 1);
		}
		else
			op_push(&a_stack, &b_stack, 1);
		a_stack = a_stack->next;
	}
	
}
int main(int argc, char **argv)
{
	t_num	*a;
	t_num	*b;
	int		i;

	if (argc == 1)
		return (0);
	a = NULL;
	b = NULL;
	i = argc - 1;
	while (i > 0)
	{
		push_num(&a, atoi(argv[i]));
		i--;
	}
	bubble_sort(&a, &b);
	while (a)
	{
		printf("a = %d\n", a->value);
		a = a->next;
	}
	while (b)
	{
		printf("b = %d\n", b->value);
		b = b->next;
	}
}
